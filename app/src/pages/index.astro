---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar';
import { getAllNotes } from '../lib/notes';
import { getCategories } from '../lib/categories';

const categories = getCategories();
const notes = getAllNotes();

const noteInfos = notes.map((n) => ({
  title: n.title,
  slug: n.slug,
  category: n.category,
}));

// Gradient + icon per category
const categoryStyle: Record<string, { gradient: string; icon: string }> = {
  'Culture': { gradient: 'from-amber-900/60 to-orange-950/40', icon: 'üé≠' },
  'Grammar': { gradient: 'from-blue-900/60 to-indigo-950/40', icon: 'üìê' },
  'Vocabulary': { gradient: 'from-emerald-900/60 to-teal-950/40', icon: 'üìù' },
  'Phrases & Expression': { gradient: 'from-purple-900/60 to-violet-950/40', icon: 'üí¨' },
  'Other': { gradient: 'from-slate-800/60 to-slate-900/40', icon: 'üìã' },
};

function getStyle(name: string) {
  return categoryStyle[name] || categoryStyle['Other'];
}

// Deterministic gradient per card based on slug hash
const cardGradients = [
  'from-blue-900/40 to-slate-900',
  'from-indigo-900/40 to-slate-900',
  'from-violet-900/40 to-slate-900',
  'from-purple-900/40 to-slate-900',
  'from-emerald-900/40 to-slate-900',
  'from-teal-900/40 to-slate-900',
  'from-cyan-900/40 to-slate-900',
  'from-amber-900/40 to-slate-900',
  'from-rose-900/40 to-slate-900',
  'from-sky-900/40 to-slate-900',
];

function cardGradient(slug: string) {
  let hash = 0;
  for (let i = 0; i < slug.length; i++) {
    hash = slug.charCodeAt(i) + ((hash << 5) - hash);
  }
  return cardGradients[Math.abs(hash) % cardGradients.length];
}
---

<Layout title="Spanish Notes" bare>
  <!-- Header -->
  <div class="mb-10">
    <h1 class="text-4xl font-bold text-white tracking-tight mb-2">Spanish Notes</h1>
    <p class="text-slate-500">{notes.length} notes across {categories.length} topics</p>
  </div>

  <!-- Search -->
  <div class="mb-14 max-w-md">
    <SearchBar client:load notes={noteInfos} />
  </div>

  <!-- Category Sections -->
  <div class="space-y-16">
    {categories.map((cat) => {
      const style = getStyle(cat.name);
      return (
        <section>
          <div class="flex items-center gap-3 mb-6">
            <span class="text-2xl">{style.icon}</span>
            <div>
              <h2 class="text-lg font-semibold text-white">{cat.name}</h2>
              <p class="text-xs text-slate-500">{cat.description}</p>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {cat.notes.map((note) => (
              <a
                href={`/${note.slug}`}
                class="group block bg-slate-800/40 border border-white/10 rounded-2xl overflow-hidden hover:border-blue-500/50 transition-all"
              >
                {/* Visual Header */}
                <div class={`h-32 bg-gradient-to-br ${cardGradient(note.slug)} flex items-center justify-center relative`}>
                  <span class="text-5xl opacity-20 group-hover:opacity-30 transition-opacity">
                    {style.icon}
                  </span>
                  <div class="absolute bottom-3 left-4 right-4">
                    <span class="text-[10px] uppercase tracking-widest text-white/30 font-medium">
                      {cat.name}
                    </span>
                  </div>
                </div>

                {/* Content */}
                <div class="p-6">
                  <h3 class="text-sm font-semibold text-slate-200 group-hover:text-white transition-colors mb-2 leading-snug">
                    {note.title}
                  </h3>
                  {note.excerpt && (
                    <p class="text-xs text-slate-500 leading-relaxed line-clamp-2">
                      {note.excerpt}
                    </p>
                  )}
                </div>
              </a>
            ))}
          </div>
        </section>
      );
    })}
  </div>
</Layout>
